{
    "name": "@energyleaf/db",
    "version": "0.0.1",
    "description": "Database module for energyleaf",
    "type": "module",
    "private": true,
    "exports": {
        ".": "./src/index.ts",
        "./schema": "./src/schema.ts",
        "./query": "./src/query/index.ts",
        "./adapter": "./src/adapter.ts",
        "./types": "./src/types/types.ts"
    },
    "scripts": {
        "push": "drizzle-kit push:mysql --config ./drizzle-local.config.ts",
        "push:prod": "drizzle-kit push:mysql",
        "studio": "drizzle-kit studio --config ./drizzle-local.config.ts",
        "studio:prod": "drizzle-kit studio",
        "clean": "git clean -xdf node_modules"
    },
    "dependencies": {
        "@energyleaf/lib": "workspace:^",
        "@energyleaf/mail": "workspace:^",
        "@lucia-auth/adapter-drizzle": "^1.0.7",
        "@planetscale/database": "^1.16.0",
        "drizzle-orm": "^0.30.8",
        "nanoid": "^5.0.7"
    },
    "devDependencies": {
        "@energyleaf/eslint-config": "workspace:^",
        "@energyleaf/tsconfig": "workspace:^",
        "drizzle-kit": "^0.20.14",
        "eslint": "^8.57.0",
        "mysql2": "^3.9.4",
        "typescript": "^5.4.5"
    }
}
