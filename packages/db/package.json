		"nanoid": "^5.0.7"
	},
	"devDependencies": {
		"@energyleaf/tsconfig": "workspace:^",
		"@types/node": "^20.14.2",
		"drizzle-kit": "^0.22.6",
		"mysql2": "^3.10.0",
		"typescript": "^5.4.5"
