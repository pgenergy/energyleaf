{
	"private": true,
	"scripts": {
		"build": "dotenv -- turbo run build --env-mode=loose",
		"build:app": "dotenv -- turbo run build --filter web --env-mode=loose",
		"build:admin": "dotenv -- turbo run build --filter admin --env-mode=loose",
		"dev": "dotenv -- turbo run dev --env-mode=loose",
		"dev:app": "dotenv -- turbo run dev --filter web --env-mode=loose",
		"dev:admin": "dotenv -- turbo run dev --filter admin --env-mode=loose",
		"dev:mail": "dotenv -- pnpm --filter mail run dev:mail",
		"start": "dotenv -- turbo run start",
		"lint": "biome lint ./apps ./packages",
		"format": "biome format --write && biome check --write --unsafe",
		"db:push": "dotenv -- pnpm --filter db run push",
		"db:push:prod": "dotenv -- pnpm --filter db run push:prod",
		"db:studio": "dotenv -- pnpm --filter db run studio",
		"db:studio:prod": "dotenv -- pnpm --filter db run studio:prod",
		"proto:compile": "dotenv -- pnpm --filter proto run compile",
		"clean": "turbo run clean && git clean -xdf .turbo node_modules"
	},
	"devDependencies": {
		"@energyleaf/tsconfig": "workspace:*",
		"@total-typescript/ts-reset": "^0.5.1",
		"turbo": "^2.0.3"
	},
	"packageManager": "pnpm@9.1.4",
	"name": "energyleaf",
	"dependencies": {
		"@biomejs/biome": "^1.8.0",
		"@vercel/analytics": "^1.3.1",
		"dotenv-cli": "^7.4.2",
		"mysql2": "^3.10.0",
		"react-error-boundary": "^4.0.13",
		"typescript": "^5.4.5",
		"zod": "^3.23.8"
	},
	"pnpm": {
		"patchedDependencies": {
			"@boringer-avatars/react@0.2.1": "patches/@boringer-avatars__react@0.2.1.patch"
		}
	}
}
